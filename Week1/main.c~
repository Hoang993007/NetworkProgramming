#include <stdio.h>
#include <stdlib.h>
#include "menu.h"
#include "accountSystem.h"



int main(int argc, char *argv[]) {
  // Open file
  FILE *file;

  if((file = fopen(argv[1], "r+") != NULL) {
      // Read data and store in a data structure
      first = loadAccountData (file);

      // Render menu
      renderMenu();

      // Store data
      storeAccountData (file);

      //clode file
      fclose(file);

    } else {
      printf("Can not read input file!");
      exit(1);
    }

    return 0;
    }
